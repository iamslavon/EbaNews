@using strings = EbaNews.Resources.Default.Web.Areas.Admin.Views.HomeStrings
@{
    ViewBag.Title = @strings.UsersTitle;
}

<div class="container">
    <div class=" margin-top-30 col-xs-12 col-sm-10 col-sm-offset-1">
        <button class="btn btn-primary margin-bot-20" data-toggle="modal" data-target="#add-modal">+ Add news</button>
        <div class="text-center" data-bind="visible: loading">
            <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
            <span class="sr-only">Loading...</span>
        </div>
        <table class="table table-bordered" data-bind="visible: !loading()">
            <thead>
                <tr class="warning">
                    <th class="text-center">Title</th>
                    <th class="text-center">Link to source</th>
                    <th class="text-center">Publication date</th>
                    <th class="text-center">Language</th>
                    <th class="text-center">Online</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: newsList">
                <tr>
                    <td data-bind="text: Title"></td>
                    <td class="text-center">
                        <a data-bind="visible: LinkToArticle() != '' && LinkToArticle() != null, attr: { href: LinkToArticle, target: '_blank' }">
                            <i class="fa fa-external-link" aria-hidden="true"></i>
                        </a>
                    </td>
                    <td class="text-center" data-bind="text: PublicationDate"></td>
                    <td class="text-center" data-bind="text: Language.Name"></td>
                    <td class="text-center">
                        <input data-bind="click: $parent.switchOnlineStatus, checked: Online()" type="checkbox" />
                    </td>
                </tr>
            </tbody>
        </table>

        <nav aria-label="Page navigation" class="text-center" data-bind="visible: !loading() && totalPages() > 1">
            <ul class="pagination" data-bind="foreach: new Array(totalPages())">
                <li data-bind="css: {active: $parent.page() == $index()+1}">
                    <a href="#" data-bind='text: $index()+1, click: function(data, event) { $parent.setPage(data, event, $index()+1) }'></a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- Add modal -->
<div id="add-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Add news</h4>
                <div class="margin-top-20">
                    <div class="form-group" data-bind="css: { 'has-success has-feedback': !addNewsValidation.titleInvalid() }">
                        <input data-bind="textInput: news().Title" class="form-control" type="text" placeholder="News title" />
                        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true" data-bind="visible: !addNewsValidation.titleInvalid()"></span>
                    </div>
                    <div class="form-group" data-bind="css: { 'has-success has-feedback': !addNewsValidation.linkInvalid() }">
                        <input data-bind="textInput: news().LinkToArticle" class="form-control" type="text" placeholder="Link to source" />
                        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true" data-bind="visible: !addNewsValidation.linkInvalid()"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-control"
                                data-bind="options: languages,
                                optionsText: 'Name',
                                value: news().Language,"></select>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" data-bind="click: addNews, css: { disabled: addNewsValidation.formInvalid() }">+ Add news</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Areas/Admin/newsController.js"></script>