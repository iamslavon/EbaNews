<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EbaNews</title>
    @Styles.Render("~/css/home")
    @Scripts.Render("~/libs/home")
    @Scripts.Render("~/app/home")
</head>
<body ng-app="home">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("EbaNews", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="btn btn-default navbar-btn " data-toggle="modal" data-target="#suggest-modal">Suggest</button>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("ChangeLanguage", "Home", new { language = "en", returnUrl = Request.Url })">Eng</a></li> 
                    <li><a href="@Url.Action("ChangeLanguage", "Home", new { language = "ru", returnUrl = Request.Url })">Рус</a></li> 
                    <li><a href="@Url.Action("ChangeLanguage", "Home", new { language = "uk", returnUrl = Request.Url })">Укр</a></li> 
                </ul>
            </div>
        </div>
    </div>

<div class="container body-content">
    @RenderBody()
</div>
    
<!-- Suggest modal -->
<div id="suggest-modal" class="modal fade" role="dialog" ng-controller="suggestNewsController">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Suggest News</h4>
                <form name="suggestModalForm" class="margin-top-20">
                    <div class="form-group">
                        <input ng-model="news.Title"
                               name="addNewsTitle"
                               class="form-control"
                               type="text"
                               placeholder="News Title"
                               ng-minlength="5"
                               required />
                    </div>
                    <div class="form-group">
                        <input ng-model="news.LinkToArticle"
                               name="addNewsLink"
                               class="form-control"
                               type="text"
                               placeholder="Link to source"
                               ng-minlength="5"
                               required />
                    </div>
                </form>
                <button type="button"
                        class="btn btn-primary"
                        ng-click="suggest()"
                        ng-class="{ disabled: suggestModalForm.$invalid }">
                    Suggest
                </button>
            </div>
        </div>
    </div>
</div>

@RenderSection("scripts", required: false)
</body>
</html>